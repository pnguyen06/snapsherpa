<div class="container">
	<h1>Editing Momentum</h1>
	<input type="checkbox" id="selectAll" value="selectAll"> Select / Deselect All<br/><br/>
	<div style="background-color: #fff;">
		<%= form_tag edit_individual_brands_path do %>
	    <div class="table-responsive">
	      <table class="table table-hover table-condensed">
	      	<thead>
	          <tr>
	            <th style="text-align: left;">Name</th>
	            <th>Momentum</th>
	            <th>Edit</th>
	          </tr>
	        </thead>
	        <tbody>
						<% for brand in @brands %>
							<tr>
								<td>
	                <div class="row">
	                  <div class="col-md-2">
	                    <%= link_to image_tag(brand.image.url(:thumb), :size => "40x40", :class => "img-rounded"), brand %>
	                  </div>
	                  <div class="col-md-10" style="text-align: left;">
	                    <h5><%= link_to brand.name, brand,  :class => "link-grey" %></h5>
	                  </div>
	                </div>
	              </td>
	              <td>
	              	<%= brand.momentum %>
	              </td>
	              <td>
	              	<%= check_box_tag "brand_ids[]", brand.id %>
	              </td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<%= submit_tag "Edit" %>
		<% end %>
	</div>
	<%= link_to 'Back', brands_path %>
</div>

<script>
	$('#selectAll').click(function() {
	   if(this.checked) {
	       $(':checkbox').each(function() {
	           this.checked = true;                        
	       });
	   } else {
	      $(':checkbox').each(function() {
	           this.checked = false;                        
	       });
	   } 
	});
</script>